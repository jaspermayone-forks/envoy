<div class="flex justify-between items-start mb-6">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= @event.name %></h1>
    <p class="text-gray-500"><%= @event.date_range %> Â· <%= @event.city %>, <%= @event.country %></p>
  </div>
  <div class="flex items-center space-x-2">
    <%= link_to "Edit", edit_admin_event_path(@event), class: "bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200" %>
    <%= link_to "View Public Page", event_path(@event.slug), target: "_blank", class: "bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
    <% unless @event.visa_letter_applications.exists? %>
      <%= button_to "Delete", admin_event_path(@event), method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this event?" },
          class: "bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700" %>
    <% end %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-sm font-medium text-gray-500 mb-1">Status</h3>
    <% if @event.accepting_applications? %>
      <span class="inline-flex px-2 py-1 text-sm font-medium rounded-full bg-green-100 text-green-800">Accepting Applications</span>
    <% elsif @event.active? %>
      <span class="inline-flex px-2 py-1 text-sm font-medium rounded-full bg-yellow-100 text-yellow-800">Applications Closed</span>
    <% else %>
      <span class="inline-flex px-2 py-1 text-sm font-medium rounded-full bg-gray-100 text-gray-800">Inactive</span>
    <% end %>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-sm font-medium text-gray-500 mb-1">Total Applications</h3>
    <p class="text-2xl font-bold text-gray-900"><%= @applications.count %></p>
  </div>
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-sm font-medium text-gray-500 mb-1">Pending Review</h3>
    <p class="text-2xl font-bold text-yellow-600"><%= @applications.pending_approval.count %></p>
  </div>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <div class="px-6 py-4 border-b">
    <h2 class="text-lg font-semibold text-gray-900">Applications</h2>
  </div>
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applicant</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @applications.each do |application| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap font-mono text-sm text-gray-900">
            <%= application.reference_number %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="font-medium text-gray-900"><%= application.participant.full_name %></div>
            <div class="text-sm text-gray-500"><%= application.participant.email %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= render "admin/visa_letter_applications/status_badge", application: application %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= application.submitted_at&.strftime("%b %d, %Y") || "-" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <%= link_to "View", admin_visa_letter_application_path(application), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-8 bg-white rounded-lg shadow p-6">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Event Details</h3>
  <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <dt class="text-sm font-medium text-gray-500">Venue</dt>
      <dd class="text-gray-900"><%= @event.venue_name %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Address</dt>
      <dd class="text-gray-900"><%= @event.full_address %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Contact Email</dt>
      <dd class="text-gray-900"><%= @event.contact_email %></dd>
    </div>
    <div>
      <dt class="text-sm font-medium text-gray-500">Application Deadline</dt>
      <dd class="text-gray-900"><%= @event.application_deadline&.strftime("%B %d, %Y at %I:%M %p") || "No deadline" %></dd>
    </div>
  </dl>
</div>
