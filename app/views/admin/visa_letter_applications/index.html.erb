<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Applications</h1>
</div>

<div class="bg-white rounded-lg shadow mb-6 p-4">
  <%= form_with url: admin_visa_letter_applications_path, method: :get, class: "flex flex-wrap gap-4" do %>
    <div class="flex-1 min-w-[200px]">
      <%= text_field_tag :search, params[:search], placeholder: "Search by name, email, or reference...",
                         class: "w-full border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>
    <div>
      <%= select_tag :event_id, options_for_select(
        [["All Events", ""]] + policy_scope(Event).order(:name).map { |e| [e.name, e.id] },
        params[:event_id]
      ), class: "border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>
    <div>
      <%= select_tag :status, options_for_select([
        ["All Statuses", ""],
        ["Pending Verification", "pending_verification"],
        ["Pending Approval", "pending_approval"],
        ["Approved", "approved"],
        ["Rejected", "rejected"],
        ["Letter Sent", "letter_sent"]
      ], params[:status]), class: "border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500" %>
    </div>
    <div>
      <%= submit_tag "Filter", class: "bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 cursor-pointer" %>
      <% if params[:search].present? || params[:status].present? || params[:event_id].present? %>
        <%= link_to "Clear", admin_visa_letter_applications_path, class: "ml-2 text-gray-500 hover:text-gray-700" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reference</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applicant</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @applications.each do |application| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap font-mono text-sm text-gray-900">
            <%= application.reference_number %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="font-medium text-gray-900"><%= application.participant.full_name %></div>
            <div class="text-sm text-gray-500"><%= application.participant.email %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= application.event.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= render "status_badge", application: application %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= application.submitted_at&.strftime("%b %d, %Y") || "-" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <%= link_to "View", admin_visa_letter_application_path(application), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @applications.empty? %>
    <div class="px-6 py-12 text-center text-gray-500">
      No applications found.
    </div>
  <% end %>
</div>
